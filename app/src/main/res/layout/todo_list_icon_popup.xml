<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todoListIcons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
