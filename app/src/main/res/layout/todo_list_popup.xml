<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="5dp">

    <TextView
        android:id="@+id/SetCurrentTodoList"
        android:layout_width="150dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:text="@string/set_todo_list_as_current"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/SetCurrentTodoListButton"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_toEndOf="@+id/SetCurrentTodoList"
        android:background="@android:color/background_light"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <View
        android:id="@+id/SetCurrentTodoListDivider"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@id/SetCurrentTodoList"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:id="@+id/RenameTodoList"
        android:layout_width="150dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_below="@id/SetCurrentTodoListDivider"
        android:gravity="center_vertical"
        android:text="@string/rename_todo_list"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/RenameTodoListButton"
        android:src="@drawable/ic_brush_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_toEndOf="@+id/RenameTodoList"
        android:layout_below="@id/SetCurrentTodoListDivider"
        android:background="@android:color/background_light"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <View
        android:id="@+id/RenameTodoListDivider"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@id/RenameTodoList"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:id="@+id/SetTodoListIcon"
        android:layout_width="150dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_below="@id/RenameTodoListDivider"
        android:gravity="center_vertical"
        android:text="@string/set_todo_list_icon"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/SetTodoListIconButton"
        android:src="@drawable/baseline_image_black_18"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_toEndOf="@+id/SetTodoListIcon"
        android:layout_below="@id/RenameTodoListDivider"
        android:background="@android:color/background_light"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <View
        android:id="@+id/SetTodoListIconDivider"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@id/SetTodoListIcon"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:id="@+id/RemoveTodoList"
        android:layout_width="150dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_below="@id/SetTodoListIconDivider"
        android:gravity="center_vertical"
        android:text="@string/remove_todo_list"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/RemoveTodoListButton"
        android:src="@drawable/baseline_delete_black_24"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_toEndOf="@+id/RemoveTodoList"
        android:layout_below="@id/SetTodoListIconDivider"
        android:background="@android:color/background_light"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

</RelativeLayout>