<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/todoItemDescription"
        android:layout_width="300dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:inputType="textMultiLine"
        android:text="@string/todoItemText"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/todoItemActionButton"
        android:src="@drawable/baseline_more_horiz_black_24"
        android:layout_width="40dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

    <EditText
        android:id="@+id/todoItemSchedule"
        android:text="@string/todoItemSchedulePlaceholder"
        android:textColor="@color/grey"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentStart="true"
        android:layout_below="@id/todoItemDescription"
        android:inputType="text"
        android:background="@android:color/transparent"/>

</RelativeLayout>